@model IEnumerable<CusTrack.Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2 style="text-align:center"><font color="red">Site Yöneticileri</font></h2><hr />
    </div>
</div>
<br />

<div class="container">
    <div class="row">
        <p>
            @MyBootstrap.LinkButton("/User/Create", "success", null, "Yönetici Ekle", "plus", "Yönetici Ekle")
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Username)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th></th>
                </tr>
            </thead>
            
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            *****
                        </td>
                        <td>
                            @MyBootstrap.LinkButton("/User/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", "Düzenle")
                            @MyBootstrap.LinkButton("/User/Delete/" + item.Id, "danger", "btn-xs", "Sil", "trash", "Sil")

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



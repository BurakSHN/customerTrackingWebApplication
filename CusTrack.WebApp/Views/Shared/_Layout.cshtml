                        </ul>
                    </li>


                    <li>
                        <a href="/Home/PastDay"><span class="fa fa-exclamation-circle fa-2x" style="color:#ff0000;vertical-align:middle"></span>&nbsp;<font size="3">Seans Günü Geçenler</font></a>
                    </li>

                    <li>
                        <a href="/Home/Calendar"><i class="fa fa-calendar fa-2x" style="color:mediumspringgreen;vertical-align:middle"></i>&nbsp;<b>Takvim</b></a>
                    </li>

                    <li>
                        <a href="/Home/Safe"><i class="fa fa-line-chart fa-2x" style="color:cornflowerblue;vertical-align:middle"></i>&nbsp;<b>Hesap</b></a>
                    </li>

                </ul>
                @{
                    User user = new User();
                    user = null;

                    if (Session["login"] != null)
                    {
                        user = Session["login"] as User;
                    }
                }
                <ul class="nav navbar-nav navbar-right">
                    @if (user != null)
                    {
                        <li class="dropdown">
                            <a href="/Home/ShowProfile" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <span class="fa fa-user-circle fa-2x" style="color:rgb(23, 199, 46);vertical-align:middle"></span>&nbsp;<b>@user.Username</b>
                            </a>

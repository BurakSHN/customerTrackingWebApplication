@model CusTrack.Entities.Seans

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-md-offset-2">
            <h2 style="text-align:center"><font color="red">Seans Detaylar</font></h2>
        </div>
    </div>
</div><hr />

<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Owner.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Owner.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Owner.Surname)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Owner.Surname)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Text)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsDraft)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd>
                    @{
                        var newDate = Model.Date.ToString("dd-MM-yyyy");
                    }
                    @newDate
                    @*@Html.DisplayFor(model => model.Date)*@
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Money)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Money)
                </dd>

            </dl>
        </div>
        <p style="text-align:right">
            @MyBootstrap.LinkButton("/Seans/Edit/" + Model.Id, "warning", "btn-sm", "Düzenle", "edit", "Düzenle")
            @MyBootstrap.LinkButton("/Seans/Index", "default", "btn-sm", "Geri Dön", "arrow-left", "Geri Dön")
        </p>
    </div>
</div>
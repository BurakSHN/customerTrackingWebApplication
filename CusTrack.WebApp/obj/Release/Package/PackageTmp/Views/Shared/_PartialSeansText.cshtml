@using CusTrack.Entities
@model Seans

<div class="row">
    <div class="col-md-12 text-center">
        <h3>@Model.Title</h3>
    </div>
    <div class="col-md-12 text-right">
        <span class="fa fa-user-circle fa-2x" style="vertical-align:middle"></span>&nbsp;<font size="3"><b>@Model.Owner.Name&nbsp;@Model.Owner.Surname</b></font><br />
        <span class="fa fa-clock-o fa-2x" style="vertical-align:middle"></span>&nbsp;<font color="red" size="3"><b>@Model.Date.ToString("dd-MM-yyyy")</b></font><br />
        <span class="fa fa-phone fa-2x" style="vertical-align:middle"></span>&nbsp;<font size="3"><b>@Model.Owner.Phone</b></font>
    </div>
    <div class="col-md-12">
        <p class="text-justify">
            @Model.Text
        </p>
    </div>
</div>

@model IEnumerable<CusTrack.Entities.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2 style="text-align:center"><font color="red">Müşteriler</font></h2><hr />
    </div>
</div>
<br />

<div class="container">
    <div class="row">
        <p>
            @MyBootstrap.LinkButton("/Customer/Create", "success", null, "Müşteri Ekle", "plus", "Müşteri Ekle")
        </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Birthday)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @item.Birthday.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @MyBootstrap.LinkButton("/Customer/Edit/" + item.Id, "warning", "btn-xs", "Düzenle", "edit", "Düzenle")
                            @MyBootstrap.LinkButton("/Customer/Details/" + item.Id, "info", "btn-xs", "Detaylar", "search", "Detaylar")
                            @MyBootstrap.LinkButton("/Customer/Delete/" + item.Id, "danger", "btn-xs", "Sil", "trash", "Sil")

                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


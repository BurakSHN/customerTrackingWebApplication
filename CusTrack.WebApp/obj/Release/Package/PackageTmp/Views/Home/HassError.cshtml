
@{
    ViewBag.Title = "HassError";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        @{
            Exception ex = null;
            if (TempData["LastError"] != null)
            {
                ex = TempData["LastError"] as Exception;
            }
        }
        <h1><span class="glyphicon glyphicon-remove"></span>Hata Oluştu</h1>
        <p>
            Hata oluştu, lütfen site yöneticisi ile iletişime geçiniz.
            <br /><br /><br />

            @if (ex != null)
            {
                <b>Hata Detay : </b>
                @ex.Message;<br /><br /><br />
            }
            @MyBootstrap.LinkButton("/Home/Index", "primary", "", "", "home", "Ana Sayfaya Git!")
            @MyBootstrap.LinkButton("mailto:burak10sahin@gmail.com", "primary", "", "", "envelope", "E-Posta Gönder")
        </p>
    </div>
</div>


@using CusTrack.Entities.ValueObjects
@model LoginViewModel

@{
    Layout = null;
   
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script> 

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />

<style>
    body {
        background-image: url(/Images/gm3.jpg);
        height: 100%; 

  /* Center and scale the image nicely */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
    }

    .main-content{
        background-color:white;
        /*background-color:#8E7E30;*/
    }

    /*.container{
      float: right;
      width: 800px;

  position: relative;
  top: 50%;
 
  
  padding:20px;

    }*/


</style>

<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">Giriş Formu</h1>
            </div>
            <div class="main-content">
                @Html.ValidationSummary(false)

                @using (Html.BeginForm())
                {
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>                 

                    <div class="form-group ">
                        <button type="submit" class="btn btn-success btn-lg btn-block login-button">Giriş</button>
                    </div>

                    <div class="form-group" style="text-align:right">
                        <a href="/Home/EMailSend"><u>Şifremi Unuttum</u></a>
                    </div>

                }



            </div>
        </div>
    </div>
</section>
